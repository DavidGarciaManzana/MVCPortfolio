@model IEnumerable<ProjectViewModel>

@if (Model is not null)
{
    <div class="text-center" style="padding-top:6rem">
        <h1>Most recent projects</h1>
        <p>Here you can see my work</p>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@project.URLImage" class="card-img-top" alt="project image" />
                        <div class="card-body">
                            <h5 class="card-title">@project.Name</h5>
                            <p class="card-text">@project.Description</p>
                        </div> 
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@project.URL" target="_blank" rel="noopener noreferrer">Visit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

